rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isAllowedUser() {
      let allowedUserIds = [
        "xQ0sExBTkmZSCQD2Zs0hDORRUt12",
        "6cT477DQObavj7X8kTMnIDuuIWD2",
        "Qne0mxI3ZWeOjrsid5wYMDZeBIa2",
        "Hz6eL8butaShNPqxSQlArpkppRl1"
      ];
      return request.auth.uid in allowedUserIds;
    }

    match /workouts/{workoutId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == resource.data.userId && isAllowedUser();
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId && isAllowedUser();
    }

    match /customExercises/{userId} {
      allow read, create, update: if request.auth != null && request.auth.uid == userId && isAllowedUser();
    }

    match /templates/{userId} {
      allow read, create, update: if request.auth != null && request.auth.uid == userId && isAllowedUser();
    }
  }
}